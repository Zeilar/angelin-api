{
    "main": "src/app/boot.ts",
    "scripts": {
        "start": "npm run start:dev",
        "start:dev": "nodemon -r tsconfig-paths/register --transpile-only & npm run scss",
        "start:prod": "node dist/src/app/boot.js",
        "seed": "knex seed:run",
        "migrate": "knex migrate:latest",
        "migrate:fresh": "knex migrate:down && npm run migrate",
        "build": "rm -rf dist && tsc && tsc-alias",
        "scss": "sass -w src/styles/loader.scss public/assets/css/index.css -s compressed"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/express-rate-limit": "^5.1.3",
        "@types/node": "^16.10.2",
        "dayjs": "^1.10.7",
        "dotenv-cli": "^4.0.0",
        "nodemon": "^2.0.13",
        "pg": "^8.7.1",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "express-rate-limit": "^5.4.0",
        "inversify": "^5.1.1",
        "inversify-express-utils": "^6.3.2",
        "knex": "^0.95.11",
        "objection": "^2.2.17",
        "reflect-metadata": "^0.1.13"
    }
}
