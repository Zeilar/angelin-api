{
    "include": ["src"],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "outDir": "build",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "baseUrl": "src",
        "paths": {
            "@utils/*": ["utils/*"],
            "@db/*": ["db/*"],
            "@config/*": ["config/*"],
            "@services/*": ["services/*"],
            "@api/*": ["api/*"],
            "@views/*": ["views/*"],
            "@app/*": ["app/*"]
        }
    }
}
