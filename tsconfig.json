{
    "include": ["src"],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "outDir": "build",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "baseUrl": "src",
        "paths": {
            "@utils/*": ["utils/*"],
            "@utils": ["utils"],

            "@db/*": ["db/*"],
            "@db": ["db"],

            "@config/*": ["config/*"],
            "@config": ["config"],

            "@services/*": ["services/*"],
            "@services": ["services"],

            "@api/*": ["api/*"],
            "@api": ["api"],

            "@views/*": ["views/*"],
            "@views": ["views"],

            "@app/*": ["app/*"],
            "@app": ["app"]
        }
    }
}
